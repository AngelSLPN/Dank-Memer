{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "script"
    },
    "env": {
        "node": true,
        "es6": true
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "no-extra-parens": "error",
        "space-before-function-paren": [
            "off"
        ],
        "no-whitespace-before-property": "error",
        "curly": [
            "error",
            "all"
        ],
        "eqeqeq": "error",
        "space-before-blocks": [
            "error",
            "always"
        ],
        "prefer-arrow-callback": "off",
        "prefer-const": "error",
        "prefer-template": "error",
        "indent": [
            "error",
            4
        ],
        "no-trailing-spaces": "error",
        "no-dupe-args": "off"
    },
    "globals": {}
}